{
  "files": [],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      // 同步 Vite 别名，@ 指向 src/renderer/src
      "@/*": ["src/renderer/src/*"],
      "@renderer/*":["src/renderer/src/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }],
  "include": [
    "src/",
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "types/*.d.ts",
    "src/preload/**/*",
    "src/renderer/types/**/*"
  ],
  "exclude": ["src/main/**/*"]
}