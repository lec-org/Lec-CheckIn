{
  "files": [],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }],
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "types/*.d.ts",
    "src/preload/**/*"
  ],
  "exclude": ["src/main/**/*"]
} 
